# Server Configuration
PORT=3001
NODE_ENV=development

# LLM Provider Configuration - Bedrock Only
DEFAULT_LLM_PROVIDER=bedrock

# AWS Bedrock Configuration
# For Local Development: Provide AWS credentials
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SESSION_TOKEN=your_aws_session_token_if_needed
AWS_REGION=us-east-1

# Bedrock Model - Claude 3.5 Sonnet v2 with cross-region inference profile
BEDROCK_MODEL=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# Note: In ECS/Production, credentials are provided by IAM task role automatically
# No need to set AWS_ACCESS_KEY_ID or AWS_SECRET_ACCESS_KEY in ECS

# Vector Database Configuration
CHROMA_DB_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=otel_knowledge

# Application Configuration
MAX_CONTEXT_LENGTH=4000
TEMPERATURE=0.7
MAX_TOKENS=2000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30
